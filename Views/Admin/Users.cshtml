@model List<Users>

<div class="container">
    <h1 class="admin-panel">Список пользователей</h1>

    @foreach (var user in Model)
    {
        <div class="user-card" data-user-id="@user.ID">
            <div class="user-info user-login" data-field="Login">@user.Login</div>
            <div class="user-info user-email" data-field="Email">@user.Email</div>
            <div class="user-info user-role" data-field="Role" @(user.Login == User.Identity.Name ? "disabled" : "")>@user.Role</div>
            <div class="user-actions">
                @if (User.Identity.Name == "admin")
                {
                    <button class="btn orange edit-user-btn">Редактировать</button>
                    <button class="btn green save-user-btn" style="display:none;">Сохранить</button>
                }
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/edituser.js"></script>